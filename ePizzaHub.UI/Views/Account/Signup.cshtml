@model ePizzaHub.UI.Models.SignupViewModel

@{
    ViewData["Title"] = "Signup";
}

<div class="row">
    <div class="col-md-7 col-sm-6" style="height:410px;">
        <img src="/images/Signup.png" height="100%" width="100%"/>
    </div>
    <div class="col-md-5 col-sm-6">
        <h4 class="mt-3">Create account here</h4>
        <form asp-action="Signup">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           <div class="row">
                <div class="form-floating col-md-6 mt-2">
                    <input asp-for="Name" class="form-control" placeholder=""/>
                    <label asp-for="Name" class="control-label ps-4"></label>

                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating col-md-6 mt-2">
                    <input asp-for="PhoneNumber" class="form-control" placeholder="" />
                    <label asp-for="PhoneNumber" class="control-label ps-4"></label>

                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
           </div>
            <div class="form-floating mt-2">
                <input asp-for="Email" class="form-control" placeholder="" />
                <label asp-for="Email" class="control-label"></label>

                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating mt-2">
                <input asp-for="Password" class="form-control" placeholder="" />
                <label asp-for="Password" class="control-label"></label>

                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-floating mt-2">
                <input asp-for="ConfirmPassword" class="form-control" placeholder="" />
                <label asp-for="ConfirmPassword" class="control-label"></label>

                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
          
           
          
            <div class="form-group d-grid mt-2">
                <input type="submit" value="Signup" class="btn btn-dark btn-block py-3" />
                <spam class="ms-3">Already have an account? <a asp-action="Login" asp-controller="Account">Login here..</a></spam>
            </div>
        </form>
    </div>
</div>

@section scripts{
    <partial name="_ValidationScriptsPartial" />
  

}


