@{
    ViewData["Title"] = "Forgot Password";
}



<div class="row">

    @if (ViewData["sentLink"] != null)
    {
        <div class="text-success p-5 border border-success border-2 rounded " style="background-color:#ebeced;">
            <h3>
                @ViewData["sentLink"].ToString()
            </h3>
            <p style="font-size:20px;"> Check or <a target="_blank" href="https://mail.google.com/">Click here..</a></p>

        </div>
      
      
    }
    else
    {
        <div class="col-md-4 offset-md-4">
            <h4 class="mt-5">Forgot Password </h4>
            <form asp-action="ForgotPassword" asp-route-returnUrl="@Context.Request.Query["returnUrl"]">
             @*    <div asp-validation-summary="All" class="text-danger"></div> *@
                <div class="form-floating mt-3">
                    <input name="email" type="email" class="form-control" id="email" placeholder="name@example.com">
                    <label for="email">Email address</label>
                    @if (ViewData["fwEmailError"] != null)
                    {
                        <span class="text-danger">@ViewData["fwEmailError"].ToString()</span>
                    }
                </div>



                <div class="form-group d-grid mt-2">

                    <input style="font-size:x-large;" type="submit" value="Submit" class="btn  btn-lg py-2 btn-outline-primary" />
                </div>
            </form>
        </div>
    }

</div>



@section scripts {
    <partial name="_ValidationScriptsPartial" />


}
