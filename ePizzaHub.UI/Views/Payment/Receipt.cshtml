                    <div>
                        <h5>INVOICE#: <b style="font-size:medium">@Model.PaymentDetail.TransactionId.ToString().Substring(0, 15)</b></h5>
                        <h5>DATE#: <b>@Model.PaymentDetail.CreatedDate.ToString("dd/MMM/yyyy")</b></h5>
                    </div>
                </div>
            </div>

            <div class="col-10 offset-1 mt-3">
                <table class="table table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th class="py-3">SL.</th>
                            <th class="py-3">ITEM DESCRIPTION</th>
                            <th class="py-3">PRICE</th>
                            <th class="py-3">QUANTITY</th>
                            <th class="py-3">TOTAL</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.Items)
                        {


                            <tr>
                                <td class="py-3"> @sl</td>
                                <td class="py-3">@item.Name</td>
                                <td class="py-3">@item.UnitPrice</td>
                                <td class="py-3">@item.Quantity</td>
                                <td class="py-3">@item.Total</td>
                            </tr>
                            sl++;


